generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Anime {
  id              String       @id
  title           String
  description     String
  watchLink       String
  status          ANIME_STATUS
  studio          String
  artist          String
  episodes        Int
  episodeDuration Int
  release         Int
  genre           String[]
  imageLink       String
  createdAt       DateTime     @default(now())
  updatedAt       DateTime
}

model Review {
  id        String   @id
  content   String
  userId    String
  animeId   String
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([animeId])
  @@index([userId])
}

model User {
  id             String    @id
  imageUrl       String
  externalUserId String    @unique
  username       String
  email          String    @unique
  role           USER_ROLE @default(USER)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime
}

enum ANIME_STATUS {
  ONGOING
  COMPLETED
}

enum USER_ROLE {
  ADMIN
  USER
}
